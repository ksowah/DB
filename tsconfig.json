{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "esModuleInterop": true,
      "allowJs": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "noEmitHelpers": true,
      "importHelpers": true,
      "sourceMap": true,
      "inlineSources": true,
      "sourceRoot": "/",
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "paths": {
        "@common/*": ["./common/*"],
        "@config": ["./config.ts"],
        "@services": ["./services/index.ts"],
        "@generated": ["./generated/*"]
      }
    },
    "include": ["./src/**/*"],
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    }
  }